<odoo>
    <record id="job_card_payment_form" model="ir.ui.view">
        <field name="name">Job.Card.Payment.Form</field>
        <field name="model">job.card.payment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="hours"/>
                        <field name="payment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="job_card_payment_tree" model="ir.ui.view">
        <field name="name">Job.Card.Payment.Tree</field>
        <field name="model">job.card.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="hours"/>
                <field name="payment"/>
            </tree>
        </field>
    </record>

</odoo>
