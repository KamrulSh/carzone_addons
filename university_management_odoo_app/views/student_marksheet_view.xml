                <group expand="0" string="Group By">
                    <filter name="group_by_marksheet_id" string="Marksheet" context="{'group_by':'marksheet_id'}"/>
                    <filter name="group_by_student_id" string="Student" context="{'group_by':'student_id'}"/>
                    <filter name="group_by_state" string="State" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_student_marksheet_line" model="ir.actions.act_window">
        <field name="name">Marksheet Line</field>
