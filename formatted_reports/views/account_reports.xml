<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <div class="page">
                    <div style="background-color: green; color: black;" class="text-center">
                        <h2>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Tax Invoice</span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                            <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                            <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                            <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                            <span t-if="o.name != '/'" t-field="o.name"/>
                        </h2>
                    </div>
                    <div style="margin-top: -8px;">
                        <table style="border: 1px solid grey; width: 100%;">
                            <tr>
                                <td style="width:50%; border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>Invoice To:</strong> <t t-esc="o.partner_id.name"/></td>
                                <td style="width:50%; border-bottom: 1px solid grey;"><strong>Invoice No.:</strong> <t t-esc="o.name"/></td>
                            </tr>
                            <tr>
                                <td style="border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>M/s: <t t-esc="o.partner_id.name"/></strong></td>
                                <td style="border-bottom: 1px solid grey;"><strong>Invoice Date:</strong> <t t-esc="o.invoice_date" t-options='{"widget": "date"}'/></td>
                            </tr>
                            <tr>
                                <td style="border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>Client TRN No:</strong> <t t-esc="o.partner_id.trn_no"/> </td>
                                <td t-if="o.move_type not in ['in_invoice', 'in_refund', 'in_receipt']"><strong>ACE Quote Ref No./Client LPO No:</strong> <t t-esc="o.client_lpo_no"/> </td>
                                <td t-if="o.move_type in ['in_invoice', 'in_refund', 'in_receipt']"><strong>ACE Quote Ref No./Client LPO No:</strong> <t t-esc="o.bill_client_lpo_no"/> </td>
                            </tr>
                            <tr>
                            <td t-if="o.move_type not in ['in_invoice', 'in_refund', 'in_receipt']" style="border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>Project Details:</strong> <t t-esc="o.project_id.name"/></td>
                            <td t-if="o.move_type in ['in_invoice', 'in_refund', 'in_receipt']" style="border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>Project Details:</strong> <t t-esc="o.bill_project_id.name"/></td>
                                <td t-if="o.move_type not in ['in_invoice', 'in_refund', 'in_receipt']"><strong>Project Ref:</strong> <t t-esc="o.project_ref"/> </td>
                                <td t-if="o.move_type in ['in_invoice', 'in_refund', 'in_receipt']"><strong>Project Ref:</strong> <t t-esc="o.bill_project_ref"/> </td>
                            </tr>
                            <tr>
                                <td t-if="o.move_type not in ['in_invoice', 'in_refund', 'in_receipt']" style="border-right: 1px solid grey;">
                                    <strong>Item:</strong> <t t-esc="o.items"/>
<!--                                    <t t-if="o.invoice_line_ids">-->
<!--                                        <t t-foreach="o.invoice_line_ids" t-as="line">-->
<!--                                            <t t-if="line.product_id.detailed_type in ['consu', 'product']">-->
<!--                                                <t t-esc="line.product_id.name"/>,-->
<!--                                            </t>-->
<!--                                        </t>-->
<!--                                    </t>-->
                                </td>
                                <td t-if="o.move_type in ['in_invoice', 'in_refund', 'in_receipt']" style="border-right: 1px solid grey;">
                                    <strong>Item:</strong> <t t-esc="o.bill_items"/>
                                </td>
                                <td><strong>ACE TRN No:</strong> 100479265900003</td>
                            </tr>
                        </table>
                    </div>
                    <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                    <div style="margin-top: 20px;">
                        <table class="table table-sm o_main_table" name="invoice_line_table" style="border: 1px solid grey; width: 100%; colspan:2; margin-bottom:0px;">
                        <thead>
                            <tr style="background-color: green; color: black;border: 1px solid grey;">
                                <th name="th_number" style="border: 1px solid grey;" class="text-center"><strong>Sr. No.</strong></th>
                                <th name="th_description" style="border: 1px solid grey;" class="text-left"><span>Description</span></th>
                                <th name="th_quantity" style="border: 1px solid grey;" class="text-right"><span>Quantity</span></th>
                                <th name="th_priceunit" style="border: 1px solid grey;" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                <th name="th_price_unit" style="border: 1px solid grey;" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.%</span>
                                </th>
                                <th name="th_taxes" style="border: 1px solid grey;" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                                <th name="th_subtotal" class="text-right" style="border: 1px solid grey;">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                            <t t-set="count" t-value="0"/>
                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td name="td_serial_no" style="border: 1px solid grey;" class="text-center">
                                            <t t-set="count" t-value="count+1"/>
                                            <span t-esc="count"/>
                                        </td>
                                        <td name="account_invoice_line_name" style="border: 1px solid grey;"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                        <td class="text-right" style="border: 1px solid grey;">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                        </td>
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="border: 1px solid grey;">
                                            <span class="text-nowrap" t-esc="line.price_unit or line.previous_price_unit"/>
                                        </td>

                                        <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="border: 1px solid grey;">
                                            <span class="text-nowrap" t-field="line.discount"/>
                                        </td>
                                        <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="border: 1px solid grey;">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                        </td>
                                        <td class="text-right o_price_total" style="border: 1px solid grey;">
                                            <span class="text-nowrap" t-esc="line.price_subtotal or line.previous_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99" style="border: 1px solid grey;">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99" style="border: 1px solid grey;">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99" style="border: 1px solid grey;">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <tr style="border: 1px solid grey;">
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                            </tr>
                            <tr style="border: 1px solid grey;">
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                            </tr>
                            <tr style="border: 1px solid grey;">
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                            </tr>
                            <tr style="border: 1px solid grey;">
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                                <td style="border: 1px solid grey;"><br/></td>
                            </tr>
                        </tbody>
                    </table>
                    </div>
                    <div class="clearfix" style="border: 1px solid grey;">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">

                                    <!--Tax totals-->
                                    <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                                    <t t-call="account.document_tax_totals"/>

                                    <!--Payments-->
                                    <t t-if="print_with_payments">
                                        <t t-if="o.payment_state != 'invoicing_legacy'">
                                            <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                            <t t-foreach="payments_vals" t-as="payment_vals">
                                                <tr>
                                                    <td>
                                                        <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="len(payments_vals) > 0">
                                                <tr class="border-black">
                                                    <td><strong>Amount Due</strong></td>
                                                    <td class="text-right">
                                                        <span t-field="o.amount_residual"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="text-left" style="font-size: 1.2em;border: 1px solid grey;">
                        <span>
                            <strong>In words:</strong>
                        </span>
                        <strong>
                            <span style="color: black" t-esc="o.num_word"/>
                        </strong>
                        <br/>
                    </div>
<!--                    <p t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference" name="payment_communication" style="margin-top:20px;">-->
<!--                        Payment Terms :  <b><span t-field="o.payment_reference"/></b>-->
<!--                    </p>-->
                    <div style="border: 1px solid grey;" class="col-12">
                        <p t-if="o.sale_id and o.sale_id.payment_term_id" name="payment_term" style="margin-top:20px; margin-left: -14px;">
                            Payment Terms :  <b><span t-field="o.sale_id.payment_term_id.name"/></b>
                        </p>
                        <p t-if="o.purchase_id and o.purchase_id.payment_term_id" name="payment_term" style="margin-top:20px; margin-left: -14px;">
                            Payment Terms :  <b><span t-field="o.purchase_id.payment_term_id.name"/></b>
                        </p>
                        <p t-if="not o.purchase_id and not o.sale_id" name="payment_term" style="margin-top:20px; margin-left: -14px;">
                            Payment Terms :  <b><span t-field="o.invoice_payment_term_id.name"/></b>
                        </p>

                        <p t-if="o.company_id.partner_id.bank_ids" name="bank_details" style="margin-top:10px; margin-left: -14px;">
                            Bank Details:
                            <t t-foreach="o.company_id.partner_id.bank_ids[0]" t-as="bank">
                                <strong>Account No:</strong> <span t-esc="bank.acc_number"/>, <strong>IBAN No:</strong> <span t-esc="bank.bank_id.iban_no"/>, <span t-esc="bank.bank_id.name"/><br/>
                            </t>
                        </p>
                    </div>
<!--                    <p t-if="o.invoice_payment_term_id" name="payment_term">-->
<!--                        <span t-field="o.invoice_payment_term_id.note"/>-->
<!--                    </p>-->
<!--                    <div t-if="not is_html_empty(o.narration)" name="comment">-->
<!--                        <span t-field="o.narration"/>-->
<!--                    </div>-->
<!--                    <p t-if="not is_html_empty(o.fiscal_position_id.note)" name="note">-->
<!--                        <span t-field="o.fiscal_position_id.note"/>-->
<!--                    </p>-->
<!--                    <p t-if="o.invoice_incoterm_id" name="incoterm">-->
<!--                        <strong>Incoterm: </strong><span t-field="o.invoice_incoterm_id.code"/> - <span t-field="o.invoice_incoterm_id.name"/>-->
<!--                    </p>-->
                    <div id="qrcode" t-if="o.display_qr_code and o.amount_residual > 0">
                        <p t-if="qr_code_urls.get(o.id)">
                            <strong class="text-center">Scan me with your banking app.</strong><br/><br/>
                            <img class="border border-dark rounded" t-att-src="qr_code_urls[o.id]"/>
                        </p>
                    </div>
                    <div>
                <table style="border: 1px solid grey; width: 100%; margin-top:10px;">
                    <tr style="border: 1px solid grey;">
                        <td style="width:50%; border-right: 1px solid grey;"><strong>Recieved By: </strong></td>
                        <td style="width:50%;"><strong>Prepared By: </strong></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Name: </strong></td>
                        <td>For,</td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;">Date: </td>
                        <td><strong>M/sACE Vision Metaland Steel Works LLC</strong></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Signature: </strong></td>
                        <td><strong>Signature</strong></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Contact No: </strong></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Stamp: </strong></td>
                        <td><strong>Stamp: </strong></td>
                    </tr>
                </table>
            </div>
                </div>
            </t>
        </template>

        <template id="report_invoice_with_payments">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-set="print_with_payments" t-value="True"/>
                    <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                        t-call="formatted_reports.report_invoice_document" t-lang="lang"/>
                </t>
            </t>
        </template>
        <template id="report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                        t-call="formatted_reports.report_invoice_document" t-lang="lang"/>
                </t>
            </t>
        </template>

        <!-- QWeb Reports -->
        <record id="account.account_invoices" model="ir.actions.report">
            <field name="report_name">formatted_reports.report_invoice_with_payments</field>
            <field name="report_file">formatted_reports.report_invoice_with_payments</field>
        </record>

        <record id="account.account_invoices_without_payment" model="ir.actions.report">
            <field name="report_name">formatted_reports.report_invoice</field>
            <field name="report_file">formatted_reports.report_invoice</field>
        </record>
    </data>
</odoo>
