<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="student_parent_view_tree" model="ir.ui.view">
        <field name="name">student.parent.tree</field>
        <field name="model">student.parent</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="relation_id"/>
                <field name="mobile"/>
                <field name="email"/>
                <field name="date_of_birth"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>
    <record id="student_parent_view_form" model="ir.ui.view">
        <field name="name">student.parent.view.form</field>
        <field name="model">student.parent</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1 class="d-flex">
                            <h3><field name="pre" readonly="True" nolabel="1"/></h3>&amp;nbsp;&amp;nbsp;
                            <field name="name" placeholder="Parent's Name" required="True"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Personal Information">
                            <group>
                                <group>
                                    <field name="relation_id" required="1" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="date_of_birth"/>
                                </group>
                                <group>
                                    <field name="mobile" required="1"/>
                                    <field name="email"/>
                                    <field name="gender"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="student_parent_view_search" model="ir.ui.view">
        <field name="name">student.parent.search</field>
        <field name="model">student.parent</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="relation_id"/>
                <field name="gender"/>
            </search>
        </field>
    </record>
    <record id="student_parent_view_kanban" model="ir.ui.view">
            <field name="name">student.parent.kanban</field>
            <field name="model">student.parent</field>
            <field name="arch" type="xml">
                <kanban class="o_modules_kanban" >
                    <field name="id"/>
                    <field name="name"/>
                   <templates>
                       <t t-name="kanban-box">
                       <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                            <div class="oe_kanban_details">
                               <div class="o_kanban_record_top">
                                   <div class="o_kanban_record_headings">
                                       <strong class="o_kanban_record_title">
                                            <field name="name" placeholder="Name"/>
                                       </strong>
                                   </div>
                               </div>
                               <ul>
                                   <strong class="o_kanban_record_title">
                                            <field name="relation_id" placeholder="Relationship"/>
                                   </strong>
                                   <li id="last_login"/>
                                   <li t-if="record.email.raw_value" class="o_text_overflow"><field name="email"/></li>
                                   <li t-if="record.mobile.raw_value" class="o_force_ltr"><field name="mobile"/></li>
                               </ul>
                           </div>
                       </div>
                       </t>
                   </templates>
                </kanban>
            </field>
        </record>


		<record id="action_student_parent" model="ir.actions.act_window">
            <field name="name">Parent</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.parent</field>
            <field name="view_mode">kanban,tree,search,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Records not available. Let's create Student!
                </p>
            </field>
		</record>


		<menuitem id="menu_student_parent" name="Parent" parent="main_menu_parent" sequence="3" action="action_student_parent"/>
</odoo>
