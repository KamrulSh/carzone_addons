<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_saleorder_document">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                <div class="page">
                    <div class="oe_structure"/>
                    <div style="background-color: green; color: black;" class="text-center">
                        <h2 class="mt16">
                            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                <span>Pro-Forma Invoice # </span>
                            </t>
                            <span t-field="doc.name"/>
                        </h2>
                    </div>
                    <div style="margin-top: -8px;">
                        <table style="border: 1px solid grey; width: 100%;">
                            <tr>
                                <td style="width:50%; border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>Invoice To:</strong> <t t-esc="doc.partner_id.name"/></td>
                                <td style="width:50%; border-bottom: 1px solid grey;"><strong>Invoice No.:</strong> <t t-esc="doc.name"/></td>
                            </tr>
                            <tr>
                                <td style="border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>M/s: <t t-esc="doc.partner_id.name"/></strong></td>
                                <td style="border-bottom: 1px solid grey;"><strong>Invoice Date:</strong> <t t-esc="doc.date_order" t-options="{'widget': 'date'}"/></td>
                            </tr>
                            <tr>
                                <td style="border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>Client TRN No:</strong> <t t-esc="doc.partner_id.trn_no"/></td>
                                <td><strong>ACE Quote Ref No./Client LPO No:</strong> <t t-esc="doc.client_lpo_no"/></td>
                            </tr>
                            <tr>
                                <td style="border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>Project Details:</strong> <t t-esc="doc.project_id.name"/></td>
                                <td><strong>Project Ref:</strong> <t t-esc="doc.project_ref"/></td>
                            </tr>
                            <tr>
                                <td style="border-right: 1px solid grey;">
                                   <strong>Item:</strong> <t t-esc="doc.items"/>
                                </td>
                                <td><strong>ACE TRN No:</strong> 10O479265900003</td>
                            </tr>
                        </table>
                    </div>
                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>

                    <table class="table table-sm o_main_table" style="margin-top: 20px; margin-bottom: 0px;">
                        <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                        <thead>
                            <tr style="background-color: green; color: black;border: 1px solid grey;">
                                <th name="th_number" style="border: 1px solid grey;" class="text-center"><strong>Sr. No.</strong></th>
                                <th name="th_description" style="border: 1px solid grey;" class="text-center"><strong>Description</strong></th>
                                <th name="th_quantity" style="border: 1px solid grey;" class="text-center"><strong>Qty</strong></th>
                                <th name="th_unit" style="border: 1px solid grey;" class="text-center"><strong>Unit</strong></th>
                                <th name="th_price_unit" style="border: 1px solid grey;" class="text-center"><strong>Unit Price</strong></th>
                                <th name="th_amount" style="border: 1px solid grey;" class="text-center"><strong>Total Price (AED)</strong></th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="count" t-value="0"/>
                            <t t-foreach="doc.order_line" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td name="td_serial_no" style="border: 1px solid grey;" class="text-center">
                                            <t t-set="count" t-value="count+1"/>
                                            <span t-esc="count"/>
                                        </td>
                                        <td name="td_name" style="border: 1px solid grey;"><span t-field="line.name"/></td>
                                        <td name="td_quantity" class="text-center" style="border: 1px solid grey;">
                                            <span t-field="line.product_uom_qty"/>
                                        </td>
                                        <td name="td_quantity_uom" class="text-center" style="border: 1px solid grey;">
                                            <span t-field="line.product_uom"/>
                                        </td>
                                        <td name="td_priceunit" class="text-right" style="border: 1px solid grey;">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td name="td_subtotal" class="text-right o_price_total" style="border: 1px solid grey;">
                                            <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td name="td_section_line" colspan="99" style="border: 1px solid grey;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td name="td_note_line" colspan="99" style="border: 1px solid grey;">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td name="td_section_subtotal" colspan="99" style="border: 1px solid grey;">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <tr style="border: 1px solid grey;">
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                        </tr>
                            <tr style="border: 1px solid grey;">
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                </tr>
                            <tr>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                </tr>
                            <tr style="border: 1px solid grey;">
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                    <td style="border: 1px solid grey;"><br/></td>
                                </tr>
                        </tbody>
                    </table>

                    <div class="clearfix" name="so_total_summary" style="border: 1px solid grey;">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm">
                                    <!-- Tax totals -->
                                    <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json)"/>
                                    <t t-call="account.document_tax_totals"/>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="text-left" style="font-size: 1.2em; border: 1px solid grey;">
                        <span>
                            <strong>In words:</strong>
                        </span>
                        <strong>
                            <span style="color: black" t-esc="doc.num_word"/>
                        </strong>
                        <br/>
                    </div>
                    <div style="border: 1px solid grey;">
                        <p t-if="not is_html_empty(doc.payment_term_id.note)">
                            <span t-field="doc.payment_term_id.note"/>
                        </p>
                        <p t-if="doc.company_id.partner_id.bank_ids" name="bank_details" style="margin-top:10px;">
                            Bank Details:
                            <t t-foreach="doc.company_id.partner_id.bank_ids[0]" t-as="bank">
                                <strong>Account No:</strong> <span t-esc="bank.acc_number"/>, <strong>IBAN No:</strong> <span t-esc="bank.bank_id.iban_no"/>, <span t-esc="bank.bank_id.name"/><br/>
                            </t>
                        </p>
                    </div>
<!--                    <p t-field="doc.note" />-->
<!--                    <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)">-->
<!--                        <strong>Fiscal Position Remark:</strong>-->
<!--                        <span t-field="doc.fiscal_position_id.sudo().note"/>-->
<!--                    </p>-->
                    <div class="oe_structure"/>
                    <div>
                <table style="border: 1px solid grey; width: 100%; margin-top:10px;">
                    <tr style="border: 1px solid grey;">
                        <td style="width:50%; border-right: 1px solid grey;"><strong>Recieved By: </strong></td>
                        <td style="width:50%;"><strong>Prepared By: </strong></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Name: </strong></td>
                        <td>For,</td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;">Date: </td>
                        <td><strong>M/sACE Vision Metaland Steel Works LLC</strong></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Signature: </strong></td>
                        <td><strong>Signature</strong></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Contact No: </strong></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Stamp: </strong></td>
                        <td><strong>Stamp: </strong></td>
                    </tr>
                </table>
            </div>
                </div>
            </t>
        </template>

        <template id="report_sale_order">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                <div class="page">
                    <div class="oe_structure"/>
                    <div style="background-color: green; color: black;" class="text-center">
                        <h2 class="mt16">
                            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                <span t-if="doc.state not in ['draft','sent']">Order # </span>
                                <span t-if="doc.state in ['draft','sent']">Quotation # </span>
                            </t>
                            <span t-field="doc.name"/>
                        </h2>
                    </div>
                    <div style="margin-top: -8px;">
                        <table style="border: 1px solid grey; width: 100%;">
                            <tr>
                                <td t-if="doc.client_order_ref" style="width:50%; border: 1px solid grey;"><strong>Your Reference:</strong> <t t-esc="doc.client_order_ref"/></td>
                                <td t-if="doc.date_order and doc.state not in ['draft','sent']" style="width:50%; border: 1px solid grey;"><strong>Order Date:</strong> <t t-esc="doc.date_order" t-options='{"widget": "date"}'/></td>
                            </tr>
                            <tr>
                                <td t-if="doc.date_order and doc.state in ['draft','sent']" style="border: 1px solid grey;"><strong>Quotation Date:</strong> <t t-esc="doc.date_order" t-options='{"widget": "date"}'/></td>
                                <td t-if="doc.validity_date and doc.state in ['draft', 'sent']" style="border: 1px solid grey;"><strong>Expiration:</strong> <t t-esc="doc.validity_date"/></td>
                            </tr>
                            <tr>
                                <td t-if="doc.user_id.name" style="border-bottom: 1px solid grey; border: 1px solid grey;"><strong>Salesperson:</strong> <t t-esc="doc.user_id.name"/></td>
                                <td></td>
                            </tr>
                        </table>
                    </div>

                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>

                    <table class="table table-sm o_main_table" style="margin-top: 20px; margin-bottom:0px;">
                        <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                        <thead style="display: table-row-group">
                            <tr style="background-color: green; color: black;border: 1px solid grey;">
                                <th name="th_serial" class="text-left" style="border: 1px solid grey;">Sr. No.</th>
                                <th name="th_description" class="text-left" style="border: 1px solid grey;">Description</th>
                                <th name="th_quantity" class="text-right" style="border: 1px solid grey;">Quantity</th>
                                <th name="th_priceunit" class="text-right" style="border: 1px solid grey;">Unit Price</th>
                                <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line" style="border: 1px solid grey;">
                                    <span>Disc.%</span>
                                </th>
                                <th name="th_taxes" class="text-right" style="border: 1px solid grey;">Taxes</th>
                                <th name="th_subtotal" class="text-right" style="border: 1px solid grey;">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="count" t-value="0"/>

                            <t t-foreach="doc.order_line" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td name="td_serial_no" style="border: 1px solid grey;" class="text-center">
                                            <t t-set="count" t-value="count+1"/>
                                            <span t-esc="count"/>
                                        </td>
                                        <td name="td_name" style="border: 1px solid grey;"><span t-field="line.name"/></td>
                                        <td name="td_quantity" class="text-right" style="border: 1px solid grey;">
                                            <span t-field="line.product_uom_qty"/>
                                            <span t-field="line.product_uom"/>
                                        </td>
                                        <td name="td_priceunit" class="text-right" style="border: 1px solid grey;">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line" style="border: 1px solid grey;">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td name="td_taxes" class="text-right" style="border: 1px solid grey;">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                        </td>
                                        <td name="td_subtotal" class="text-right o_price_total" style="border: 1px solid grey;">
                                            <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td name="td_section_line" colspan="99" style="border: 1px solid grey;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td name="td_note_line" colspan="99" style="border: 1px solid grey;">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td name="td_section_subtotal" colspan="99" style="border: 1px solid grey;">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix" name="so_total_summary" style="border: 1px solid grey;">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm">
                                    <!-- Tax totals -->
                                    <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json)"/>
                                    <t t-call="account.document_tax_totals"/>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                        <div class="offset-8">
                            <strong>Signature</strong>
                        </div>
                        <div class="offset-8">
                            <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="doc.signed_by"/>
                        </div>
                    </div>
                    <div class="text-left" style="font-size: 1.2em; border: 1px solid grey;" >
                        <span>
                            <strong>In words:</strong>
                        </span>
                        <strong>
                            <span style="color: black" t-esc="doc.num_word"/>
                        </strong>
                        <br/>
                    </div>
<!--                    <p t-if="not is_html_empty(doc.payment_term_id.note)">-->
<!--                        <span t-field="doc.payment_term_id.note"/>-->
<!--                    </p>-->

                    <div class="oe_structure"/>

<!--                    <p t-field="doc.note" />-->
<!--                    <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)">-->
<!--                        <strong>Fiscal Position Remark:</strong>-->
<!--                        <span t-field="doc.fiscal_position_id.sudo().note"/>-->
<!--                    </p>-->
                    <div>
                        <table style="border: 1px solid grey; width: 100%; margin-top:10px;">
                            <tr style="border: 1px solid grey;">
                                <td style="width:50%; border-right: 1px solid grey;"><strong>Recieved By: </strong></td>
                                <td style="width:50%;"><strong>Prepared By: </strong></td>
                            </tr>
                            <tr>
                                <td style="border-right: 1px solid grey;"><strong>Name: </strong></td>
                                <td>For,</td>
                            </tr>
                            <tr>
                                <td style="border-right: 1px solid grey;">Date: </td>
                                <td><strong>M/sACE Vision Metaland Steel Works LLC</strong></td>
                            </tr>
                            <tr>
                                <td style="border-right: 1px solid grey;"><strong>Signature: </strong></td>
                                <td><strong>Signature</strong></td>
                            </tr>
                            <tr>
                                <td style="border-right: 1px solid grey;"><strong>Contact No: </strong></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td style="border-right: 1px solid grey;"><strong>Stamp: </strong></td>
                                <td><strong>Stamp: </strong></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </template>


        <template id="report_saleorder">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="formatted_reports.report_sale_order" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

        <template id="report_saleorder_pro_forma">
            <t t-call="web.html_container">
                <t t-set="is_pro_forma" t-value="True"/>
                <t t-set="docs" t-value="docs.with_context(proforma=True)"/>
                <t t-foreach="docs" t-as="doc">
                    <t t-call="formatted_reports.report_saleorder_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

        <record id="sale.action_report_saleorder" model="ir.actions.report">
            <field name="report_name">formatted_reports.report_saleorder</field>
            <field name="report_file">formatted_reports.report_saleorder</field>
        </record>

        <record id="sale.action_report_pro_forma_invoice" model="ir.actions.report">
            <field name="report_name">formatted_reports.report_saleorder_pro_forma</field>
            <field name="report_file">formatted_reports.report_saleorder_pro_forma</field>
        </record>
    </data>
</odoo>
