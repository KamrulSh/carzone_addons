<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="university_department_view_tree" model="ir.ui.view">
        <field name="name">university.department.tree</field>
        <field name="model">university.department</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="university_department_view_form" model="ir.ui.view">
        <field name="name">university.department.view.form</field>
        <field name="model">university.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>                   
                    <div class="oe_title">
                        <h1 class="d-flex">
                            <field name="name" placeholder="department's Name" required="True"/>
                        </h1>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="university_department_view_search" model="ir.ui.view">
        <field name="name">university.department.search</field>
        <field name="model">university.department</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>


		<record id="action_university_department" model="ir.actions.act_window">
            <field name="name">Department</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">university.department</field>
            <field name="view_mode">tree,search,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Records not available. Let's create department!
                </p>
            </field>
		</record>

		<menuitem id="sub_menu_university_department" name="Department" parent="student_configure" sequence="5" action= "action_university_department"/>
</odoo>
