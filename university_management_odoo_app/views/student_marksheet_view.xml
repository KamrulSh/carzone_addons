<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <!-- This View Contain Details of Marksheet
-->    <record id="student_marksheet_view_tree" model="ir.ui.view">
        <field name="name">student.marksheet.tree</field>
        <field name="model">student.marksheet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="total_pass"/>
                <field name="total_fail"/>
                <field name="result_template_id"/>
                <field name="session_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="student_marksheet_view_form" model="ir.ui.view">
        <field name="name">student.marksheet.view.form</field>
        <field name="model">student.marksheet</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                    <button name="action_validated"
                            string="Validated"
                            type="object"
                            class="btn-primary"
                            states="draft"
                            />
                     <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            class="btn-primary"
                            states="draft"
                            />
                     <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1" attrs="{'readonly':[('state','=','validated')]}"/>
                            <field name="user_id" attrs="{'readonly':[('state','=','validated')]}" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="pass_mark" required="1"/>
                            <field name="total_pass"/>

                        </group>
                        <group>
                            <field name="result_template_id" required="1" attrs="{'readonly':[('state','=','validated')]}" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="session_id" readonly="1" force_save="1" attrs="{'readonly':[('state','=','validated')]}" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="date" attrs="{'readonly':[('state','=','validated')]}" />
                            <field name="total_fail"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Marksheet">
                            <field name="line_ids" attrs="{'readonly':[('state','=','validated')]}">
                                <tree>
                                    <field name="marksheet_id" invisible="1"/>
                                    <field name="student_id"/>
                                    <field name="total_marks"/>
                                    <field name="percentage"/>
                                    <field name="state"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="marksheet_id" readonly="1" options="{'no_create': True, 'no_edit': True}"/>
                                                <field name="course_id" invisible="1"/>
                                                <field name="batch_id" invisible="1"/>
                                                <field name="student_id" required="1" domain="[('course_id', '=', course_id),('active', '=', True)]" options="{'no_create': True, 'no_edit': True}"/>
                                                <field name="total_marks"/>
                                            </group>
                                            <group>
                                                <field name="state"/>
                                                <field name="percentage"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="Result Line">
                                                <field name="student_result_ids">
                                                    <tree editable="bottom">
                                                        <field name="marksheet_line_id" invisible="1" options="{'no_create': True, 'no_edit': True}"/>
                                                        <field name="student_id" readonly="1" force_save="1" options="{'no_create': True, 'no_edit': True}"/>
                                                        <field name="exam_id" domain="[('attendance_ids.student_id','=', student_id)]" required="1"/>
                                                        <field name="subject_id" readonly="1" force_save="1"/>
                                                        <field name="marks"/>
                                                        <field name="state"/>
                                                    </tree>
                                                    <form>
                                                        <sheet>
                                                            <group>
                                                                <group>
                                                                    <field name="marksheet_line_id" options="{'no_create': True, 'no_edit': True}"/>
                                                                    <field name="student_id" options="{'no_create': True, 'no_edit': True}"/>
                                                                    <field name="marks"/>
                                                                </group>
                                                                <group>
                                                                    <field name="exam_id"/>
                                                                    <field name="subject_id"/>
                                                                    <field name="state"/>
                                                                </group>
                                                            </group>
                                                        </sheet>
                                                    </form>
                                                </field>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>

                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="student_marksheet_view_search" model="ir.ui.view">
        <field name="name">student.marksheet.search</field>
        <field name="model">student.marksheet</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="user_id"/>
                <field name="result_template_id"/>
                <field name="session_id"/>
                <field name="date"/>
                <field name="state"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_user_id" string="Generated By" context="{'group_by':'user_id'}"/>
                    <filter name="group_by_result_template_id" string="Result Template" context="{'group_by':'result_template_id'}"/>
                    <filter name="group_by_date" string="Generated Date" context="{'group_by':'date'}"/>
                    <filter name="group_by_state" string="State" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_student_marksheet" model="ir.actions.act_window">
        <field name="name">Marksheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.marksheet</field>
        <field name="view_mode">tree,search,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Records not available. Let's create admission!
            </p>
        </field>
    </record>


    <menuitem id="menu_student_marksheet" name="Marksheet" parent="main_menu_result" sequence="2" action="action_student_marksheet"/>
    
