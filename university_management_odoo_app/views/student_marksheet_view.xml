        <field name="res_model">student.marksheet.line</field>
        <field name="view_mode">tree,search,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Records not available. Let's create Student!
            </p>
        </field>
    </record>

    <menuitem id="menu_student_marksheet_line" name="Marksheet Line" parent="main_menu_result" sequence="4" action="action_student_marksheet_line"/>

