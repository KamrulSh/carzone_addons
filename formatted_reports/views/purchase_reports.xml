    <template id="report_purchaseorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="formatted_reports.report_purchaseorder_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="report_purchase_quotation">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="formatted_reports.report_purchasequotation_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="purchase.action_report_purchase_order" model="ir.actions.report">
        <field name="report_name">formatted_reports.report_purchaseorder</field>
        <field name="report_file">formatted_reports.report_purchaseorder</field>
    </record>

    <record id="purchase.report_purchase_quotation" model="ir.actions.report">
