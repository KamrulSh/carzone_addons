<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="university_faculty_view_tree" model="ir.ui.view">
        <field name="name">university.faculty.tree</field>
        <field name="model">university.faculty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="mobile"/>
                <field name="email"/>
                <field name="date_of_birth"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>
    <record id="university_faculty_view_form" model="ir.ui.view">
        <field name="name">university.faculty.view.form</field>
        <field name="model">university.faculty</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                    <button name="action_create_employee"
                            string="Create Employee"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible':[('employee_id','!=',False)]}"
                            />
                     <button name="action_create_user"
                            string="Create User"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible':[('user_id','!=',False)]}"
                            />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1 class="d-flex">
                            <field name="image" widget="image" class="oe_avatar"/>
                            <h3><field name="pre" readonly="True" nolabel="1"/></h3>&amp;nbsp;&amp;nbsp;
                            <field name="name" placeholder="faculty's Name" required="True"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Personal Information">
                            <group>
                                <group>
                                    <field name="date_of_birth" required="1"/>
                                    <field name="mobile" required="1"/>
                                    <field name="email" required="1"/>
                                    <field name="gender"/>
                                    <field name="department_ids" widget="many2many_tags" options="{'no_create': True, 'no_edit': True}"/>
                                </group>
                                <group>
                                    <field name="blood_group"/>
                                    <field name="visa_details"/>
                                    <field name="country_id" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="department_id" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="user_id" invisible="1" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="employee_id" invisible="1" options="{'no_create': True, 'no_edit': True}"/>
                                </group>
                            </group>
                            <group string="Address">
                                <group>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="city"/>
                                    <field name="zip"/>
                                    <field name="state_id" domain="[('country_id','=',country_id)]" options="{'no_create': True, 'no_edit': True}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Subject">
                            <field name="subject_ids">
                                <tree editable="bottom">
                                    <field name="faculty_id" invisible="1"/>
                                    <field name="department_id" force_save="1" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="subject_id" domain="[('department_id','=',department_id)]" required="True"/>
                                    <field name="code" required="True"/>
                                    <field name="type" required="1"/>
                                    <field name="subject_type"/>
                                    <field name="grade"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="faculty_id"/>
                                            <field name="code" required="True"/>
                                            <field name="type" required="1"/>
                                        </group>
                                        <group>
                                            <field name="subject_type"/>
                                            <field name="grade"/>
                                            <field name="department_id" options="{'no_create': True, 'no_edit': True}"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="university_faculty_view_search" model="ir.ui.view">
        <field name="name">university.faculty.search</field>
        <field name="model">university.faculty</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="mobile"/>
                <field name="email"/>
                <field name="date_of_birth"/>
                <field name="gender"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_gender" string="Gender" context="{'group_by':'gender'}"/>
                    <separator/>
                    <filter name="group_by_department_id" string="Department" context="{'group_by':'department_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="university_faculty_view_kanban" model="ir.ui.view">
            <field name="name">university.faculty.kanban</field>
            <field name="model">university.faculty</field>
            <field name="arch" type="xml">
                <kanban class="o_modules_kanban" >
                    <field name="id"/>
                    <field name="name"/>
                    <field name="image"/>
                   <templates>
                       <t t-name="kanban-box">
                       <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                           <field name="image" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/>
                            <div class="oe_kanban_details">
                               <div class="o_kanban_record_top">
                                   <div class="o_kanban_record_headings">
                                       <strong class="o_kanban_record_title">

                                            <field name="name" placeholder="Name"/>
                                       </strong>
                                   </div>
                               </div>
                               <ul>
                                   <li id="last_login"/>
                                   <li t-if="record.email.raw_value" class="o_text_overflow"><field name="email"/></li>
                                   <li t-if="record.mobile.raw_value" class="o_force_ltr"><field name="mobile"/></li>
                               </ul>
                           </div>
                       </div>
                       </t>
                   </templates>
                </kanban>
            </field>
        </record>


		<record id="action_university_faculty" model="ir.actions.act_window">
            <field name="name">Faculty</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">university.faculty</field>
            <field name="view_mode">kanban,tree,search,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Records not available. Let's create faculty!
                </p>
            </field>
		</record>

		<menuitem id="main_menu_university_faculty" name="Faculty" sequence="4"/>

		<menuitem id="sub_menu_university_faculty" name="Faculty" parent="main_menu_university_faculty" sequence="1" action="action_university_faculty"/>
</odoo>
