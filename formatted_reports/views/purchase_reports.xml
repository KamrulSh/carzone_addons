<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document">
    <t t-call="web.external_layout">
        <div class="page">
            <div class="oe_structure"/>
            <div style="background-color: green; color: black;" class="text-center">
                <h2 t-if="o.state in ['draft', 'sent', 'to approve']">Request for Quotation #<span t-field="o.name"/></h2>
                <h2 t-if="o.state in ['purchase', 'done']">Purchase Order #<span t-field="o.name"/></h2>
                <h2 t-if="o.state == 'cancel'">Cancelled Purchase Order #<span t-field="o.name"/></h2>
            </div>
            <div>
                <table style="border: 1px solid grey; width: 100%;">
                    <tr>
                        <td style="width:50%; border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>Purchase Order To:</strong> <t t-esc="o.partner_id.name"/></td>
                        <td style="width:50%;"><strong>PO No.:</strong> <t t-esc="o.name"/></td>
                    </tr>
                    <tr>
                        <td rowspan="2" style="border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>M/s: <t t-esc="o.partner_id.name"/></strong></td>
                        <td style="border-bottom: 1px solid grey;"><strong>PO Date:</strong> <t t-esc="o.date_order" t-options='{"widget": "date"}'/></td>
                    </tr>
                    <tr>
                        <td style="border-bottom: 1px solid grey;"><strong>Subcontractor/Supplier Quote Ref:</strong> <t t-esc="o.partner_ref"/> </td>
                    </tr>
                    <tr>
                        <td style="border-bottom: 1px solid grey; border-right: 1px solid grey;"><strong>Supplier TRN No:</strong> <t t-esc="o.partner_id.trn_no"/></td>
                        <td><strong>ACE Quote Ref No./Client LPO No:</strong> <t t-esc="o.client_lpo_no"/> </td>
                    </tr>
                    <tr>
                        <td style="border-bottom: 1px solid grey; border-right: 1px solid grey;">
                            <strong>Project Details:</strong> <t t-esc="o.project_id.name"/>
                        </td>
                        <td><strong>Delivery Required On:</strong> <t t-esc="o.date_planned" t-options="{'widget': 'date'}"/></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;">
                            <strong>Item:</strong><t t-esc="o.items"/>
<!--                            <t t-if="o.order_line">-->
<!--                                <t t-foreach="o.order_line" t-as="line">-->
<!--                                    <t t-esc="line.product_id.name"/>,-->
<!--                                </t>-->
<!--                            </t>-->
                        </td>
                        <td><strong>Project Ref:</strong> <t t-esc="o.project_ref"/> </td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"></td>
                        <td><strong>ACE TRN No:</strong> 100479265900003</td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"></td>
                        <td><strong>Terms Of Delivery:</strong> <t t-esc="delivery_terms"/> </td>
                    </tr>
                </table>
            </div>
            <div style="margin-top: 20px;">
                <table class="table table-sm o_main_table" style="border: 1px solid grey; width: 100%; colspan:2; margin-bottom: 0px;">
                <thead>
                    <tr style="background-color: green; color: black;border: 1px solid grey;">
                        <th name="th_number" style="border: 1px solid grey;" class="text-center"><strong>Sr. No.</strong></th>
                        <th name="th_description" style="border: 1px solid grey;" class="text-center"><strong>Description</strong></th>
                        <th name="th_quantity" style="border: 1px solid grey;" class="text-center"><strong>Qty</strong></th>
                        <th name="th_unit" style="border: 1px solid grey;" class="text-center"><strong>Unit</strong></th>
                        <th name="th_price_unit" style="border: 1px solid grey;" class="text-center"><strong>Unit Price</strong></th>
                        <th name="th_amount" style="border: 1px solid grey;" class="text-center"><strong>Total Price (AED)</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="count" t-value="0"/>
                    <t t-foreach="o.order_line" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                            style="border: 1px solid grey;">
                            <t t-if="not line.display_type">
                                <td name="td_serial_no" style="border: 1px solid grey;" class="text-center">
                                    <t t-set="count" t-value="count+1"/>
                                    <span t-esc="count"/>
                                </td>
                                <td id="product" style="border: 1px solid grey;">
                                    <span t-field="line.name"/>
                                </td>
                                <td class="text-center" style="border: 1px solid grey;" >
                                    <span t-field="line.product_qty"/>
                                </td>
                                <td class="text-center" style="border: 1px solid grey;">
                                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                </td>
                                <td class="text-right" style="border: 1px solid grey;">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-right" style="border: 1px solid grey;">
                                    <span t-field="line.price_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99" id="section" style="border: 1px solid grey;">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99" id="note" style="border: 1px solid grey;">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>
                        <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right" style="border: 1px solid grey;">
                                <td colspan="99" id="subtotal" style="border: 1px solid grey;">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                    <tr style="border: 1px solid grey;">
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                        </tr>
                    <tr style="border: 1px solid grey;">
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                        </tr>
                    <tr>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                        </tr>
                    <tr style="border: 1px solid grey;">
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                            <td style="border: 1px solid grey;"><br/></td>
                        </tr>
                </tbody>
            </table>
            </div>
            <div style="border: 1px solid grey;">
            <div id="total" class="row justify-content-end">
                <div class="col-4">
                    <table class="table table-sm">
                        <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                        <t t-call="account.document_tax_totals"/>
                    </table>
                </div>
            </div>
                </div>
            <div class="text-left col-12" style="border: 1px solid grey;">
                <span>
                    <strong>In words:</strong>
                </span>
                <strong>
                    <span style="color: black" t-esc="o.num_word"/>
                </strong>
                <br/>
                <span><strong>Payment Terms: </strong><t t-esc="o.payment_term_id.name"/></span>
                <br/>
            </div>
            <p t-field="o.notes"/>
            <div>
                <table style="border: 1px solid grey; width: 100%;">
                    <tr style="border: 1px solid grey;">
                        <td style="width:50%; border-right: 1px solid grey;"><strong>Recieved By: </strong></td>
                        <td style="width:50%;"><strong>Prepared By: </strong></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Name: </strong></td>
                        <td>For,</td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;">Date: </td>
                        <td><strong>M/sACE Vision Metaland Steel Works LLC</strong></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Signature: </strong></td>
                        <td><strong>Signature</strong></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Contact No: </strong></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid grey;"><strong>Stamp: </strong></td>
                        <td><strong>Stamp: </strong></td>
                    </tr>
                </table>
            </div>
            <div class="oe_structure"/>
        </div>
    </t>
</template>

