<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="library_book_publisher_view_tree" model="ir.ui.view">
        <field name="name">library.book.publisher.tree</field>
        <field name="model">library.book.publisher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="library_book_publisher_view_form" model="ir.ui.view">
        <field name="name">library.book.publisher.view.form</field>
        <field name="model">library.book.publisher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>                   
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="library_book_publisher_view_search" model="ir.ui.view">
        <field name="name">library.book.publisher.search</field>
        <field name="model">library.book.publisher</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>


		<record id="action_library_book_publisher" model="ir.actions.act_window">
            <field name="name">Publisher</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">library.book.publisher</field>
            <field name="view_mode">tree,search,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Records not available. Let's create course!
                </p>
            </field>
		</record>

		<menuitem id="menu_library_book_publisher" name="Publisher" parent="library_configure" sequence="6" action="action_library_book_publisher"/>
</odoo>
