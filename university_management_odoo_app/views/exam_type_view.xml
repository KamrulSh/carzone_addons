<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="exam_type_view_tree" model="ir.ui.view">
        <field name="name">exam.type.tree</field>
        <field name="model">exam.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="exam_type_view_form" model="ir.ui.view">
        <field name="name">exam.type.view.form</field>
        <field name="model">exam.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>                   
                    <div class="oe_title">
                        <h1 class="d-flex">
                            <field name="name" placeholder="Exam Type" required="True"/>
                        </h1>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="exam_type_view_search" model="ir.ui.view">
        <field name="name">exam.type.search</field>
        <field name="model">exam.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>


		<record id="action_exam_type" model="ir.actions.act_window">
            <field name="name">Exam Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">exam.type</field>
            <field name="view_mode">tree,search,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Records not available. Let's create course!
                </p>
            </field>
		</record>

        <menuitem id="main_menu_exam" sequence="9" name="Exam"/>
        <menuitem id="exam_configure" sequence="100" parent= "main_menu_exam" name="Configuration"/>
		<menuitem id="sub_menu_exam_type" name="Exam Type" parent="exam_configure" sequence="1" action="action_exam_type"/>
</odoo>
